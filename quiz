          opts: ["рдмрд╛рдВрдЧреНрд▓рд╛рджреЗрд╢", "рдкрд╛рдХрд┐рд╕реНрддрд╛рди", "рдиреЗрдкрд╛рд▓", "рднреВрдЯрд╛рди"],
          ans: 1,
        }
